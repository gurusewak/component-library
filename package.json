{
  "name": "component-library",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gurusewak/component-library"
  },
  "exports": {
    ".": {
      "import": "./dist/index.es.ts",
      "require": "./dist/index.umd.ts",
      "types": "./dist/index.d.ts"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "scripts": {
    "generate:schemas": "node docgen.js",
    "dev": "npm run generate:schemas && npx ladle serve && vite",
    "dev:clean":"rm -rf src/type-schemas && npm run dev",
    "build": "tsc && vite build && npm run build:styles && npx ladle build",
    "build:styles": "postcss ./src/index.scss -o ./dist/style.css",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prepublishOnly": "npm run build",
    "test": "playwright test -c playwright-ct.config.ts",
    "postinstall": "npx playwright install",
    "prepare":"npm run build && npm run build:styles"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.41.2",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20.11.16",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/sync-fetch": "^0.4.3",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "eslint-plugin-storybook": "^0.6.15",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.33",
    "postcss-cli": "^10.1.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.0.2",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.2.2"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@ladle/react": "^4.0.2",
    "@radix-ui/react-avatar": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "class-variance-authority": "^0.6.0",
    "clsx": "^1.2.1",
    "lucide-react": "^0.221.0",
    "path": "^0.12.7",
    "playwright": "^1.42.0",
    "rollup": "^4.12.0",
    "sass": "^1.71.1",
    "sass-loader": "^14.1.1",
    "sync-fetch": "^0.5.2",
    "tailwind-merge": "^1.12.0",
    "tailwindcss-animate": "^1.0.5",
    "typedoc": "^0.25.9"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
